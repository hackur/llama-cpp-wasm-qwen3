{
  "manifest_version": 3,
  "name": "Qwen3 Llama.cpp Wasm Extension",
  "version": "0.1.0",
  "description": "Run Qwen3 model locally in your browser using llama-cpp-wasm.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage"
  ]
}
